<%- include('header') %>

<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
      <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
          <h4 class="page-title">Tables</h4>
          <div class="ms-auto text-end">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">
                  Library
                </li>
              </ol>
            </nav>
          </div>
        </div>
      </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
      <!-- ============================================================== -->
      <!-- Start Page Content -->
      <!-- ============================================================== -->
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title mb-0">Static Table</h5>
            </div>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">Id</th>
                  <th scope="col">Name</th>
                  <th scope="col">Action</th>
                  <th scope="col">Status</th>
                </tr>
              </thead>
              <tbody>
                <%  catagory.map((val,i) => { %>
                    <tr>
                        <th scope="row"> <%= ++i %></th>
                        <td><%= val.catagory_name %></td>
                        <td>
                          <a href="/catagory/deletecatagory?id=<%= val.id  %>" class="btn btn-danger">Delete</a> 
                          <a href="/catagory/editcatagory?id=<%= val.id  %>" class="btn btn-primary">Edit</a>
                        </td>
                        <td>
                          <% if( val.status == "active") { %>
                            <a href="/catagory/changestatus?id=<%= val.id %>&status=<%= val.status %>" class="btn btn-success"> <%= val.status %>  </a>
                        <% } else { %>
                          <a href="/catagory/changestatus?id=<%= val.id %>&status=<%= val.status %>" class="btn btn-warning"> <%= val.status %>  </a>
                     <%   } %>
                        </td>
                        
                       
                      </tr>
            <%   }) %>
               
              </tbody>
            </table>
          </div>
         
        </div>
      </div>
      <!-- ============================================================== -->
      <!-- End PAge Content -->
      <!-- ============================================================== -->
      <!-- ============================================================== -->
      <!-- Right sidebar -->
      <!-- ============================================================== -->
      <!-- .right-sidebar -->
      <!-- ============================================================== -->
      <!-- End Right sidebar -->
      <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            /* background-image: url('https://img.freepik.com/premium-vector/abstract-black-gold-luxury-background_249611-9719.jpg?semt=ais_hybrid'); */
            background-repeat: no-repeat;
            background-size: cover;
            color: #212529;
        }

        .sidebar {
            background: rgba(0, 0, 0, 0.7);
            border-radius: 8px;
            padding: 1.5rem;
            margin: 2rem 0;
            color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .nav-link {
            font-size: 1rem;
            padding: 0.8rem 1rem;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            color: #fff;
            transition: all 0.3s ease;
        }

        .nav-link:hover {
            background-color: #f8f9fa;
            color: #212529;
        }

        .card {
            border: none;
            border-radius: 10px;
            background: rgba(255, 255, 255, 0.85);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .card h5 {
            font-weight: bold;
        }

        .card .btn {
            border-radius: 5px;
        }

        .card img {
            border-radius: 10px 10px 0 0;
        }

        .btn-danger {
            background-color: #dc3545;
            border: none;
        }

        .btn-warning {
            background-color: #ffc107;
            color: #212529;
            border: none;
        }

        .btn-warning:hover {
            background-color: #ffca2c;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

        h1 {
            font-weight: bold;
            color: #fff;
        }

        a {
            text-decoration: none;
        }
    </style>
</head>

<body>
    <div class="container">
        <!-- Sidebar -->
        <aside class="sidebar text-center">
            <h1>Admin view blog</h1>
            <div class="nav-links d-flex flex-column gap-3">
                <a href="/view" class="nav-link"><i class="bi bi-view-list"></i> View Blogs</a>
                <a href="/add" class="nav-link"><i class="bi bi-pencil"></i> Add Blog</a>
                <a href="/logout" class="nav-link"><i class="bi bi-box-arrow-right"></i> Log Out</a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <div class="content">
                <div class="row mt-5">
                    <% user.map((val, index) => { %>
                        <div class="col-md-4 mb-4">
                            <div class="card shadow">
                                <img src="<%= val.image %>" class="card-img-top img-fluid" alt="Blog Image">
                                <div class="card-body text-center">
                                    <h5 class="card-title"><%= val.name %></h5>
                                    <p class="text-muted">
                                        <%= val.description.slice(0, 100) %>...
                                        <a href="/readmore/<%= val.id %>" class="text-primary">Read More</a>
                                    </p>
                                    <div>
                                        <a href="/deletdata/<%= val.id %>" class="btn btn-danger me-2">Delete</a>
                                        <a href="/editpage/<%= val.id %>" class="btn btn-warning">Edit</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </main>
    </div>

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
